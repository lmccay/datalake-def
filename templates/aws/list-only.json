{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "LimitedAccessToDataLakeBucket",
      "Effect": "Allow",
      "Action": [
        "s3:AbortMultipartUpload",
        "s3:ListBucket",
        "s3:ListBucketMultipartUploads"
      ],
      "Resource": "arn:aws:s3:::${storage_location}"
    }
  ]
}
